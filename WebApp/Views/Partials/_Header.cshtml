@using Microsoft.AspNetCore.Identity
@{
    var user = await UserManager.GetUserAsync(User);
}
<header>

    <div class="container">

        <a asp-action="Home" asp-controller="Default" class="logo"><img src="~/images/header-logo/logo-silicon.svg" alt="logotype_Silicon"></a>

        <nav class="nav-menu">
            @if(SignInManager.IsSignedIn(User) && user != null)
            {
                <a asp-action="Home" asp-controller="Default" class="nav-link">Overview</a>
                <a asp-action="Index" asp-controller="Courses" class="nav-link">Courses</a>
                <a asp-action="Contact" asp-controller="Default" class="nav-link">Contact</a>
            
            }
             else
             {
                <a asp-action="Home" asp-controller="Default" class="nav-link">Overview</a>
                <a asp-action="Home" asp-controller="Default" asp-fragment="features" class="nav-link">Features</a>
                <a asp-action="Contact" asp-controller="Default" class="nav-link">Contact</a>
             }
             
        </nav>

        <div class="theme-switch">
            <label for="theme-switch-mode">Light</label>
            <label class="switch">
                <input id="theme-switch-mode" type="checkbox">
                <span class="slider round"></span>
            </label>
            <label for="theme-switch-mode">Dark</label>
        </div>

        <div class="account-buttons">
            @if (SignInManager.IsSignedIn(User) && user != null)
            {
               <div class="profile">
                   <div class="image">
                       <a asp-controller="Account" asp-action="Details">
                            @if (!string.IsNullOrEmpty(user.ProfileImage))
                            {
                                <img src="@Configuration["FilePath:ProfileImagePath"]/@user.ProfileImage" alt="" />
                            }
                            else
                            {
                                <img src="~/uploads/profileimage.svg" alt="" />
                            }
                       </a>
                    </div>
                </div>
            }
            else
            {
                <a asp-action="SignIn" asp-controller="Auth" class="btn btn-secondary"><i class="fa-regular fa-arrow-right-to-bracket"></i>Sign in</a>
                <a asp-action="SignUp" asp-controller="Auth" class="btn btn-theme"><i class="fa-regular fa-user"></i>Sign up</a>
            }
            
        </div>

        <button class="btn btn-menu"><i class="fa-regular fa-bars"></i></button>

    </div>

</header>