<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://kit.fontawesome.com/a041cc045c.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>
        @(!string.IsNullOrEmpty(@ViewData["Title"]?.ToString()) ? ViewData["Title"] + " | Silicon" : "Silicon")
    </title>
</head>
<body>
    <div class="wrapper">
        <partial name="~/Views/Partials/_Header.cshtml" />

        <section class="account">
            <div class="container">
                <aside>
                    <partial name="~/Views/Account/_AccountProfile.cshtml" />
                    <nav class="account-nav">
                        <a class="btn btn-nav active" asp-action="Details" asp-controller="Account"><i class="fa-regular fa-cog"></i>Account Details</a>
                        <a class="btn btn-nav" asp-action="SignOut" asp-controller="Auth"><i class="fa-regular fa-arrow-right-from-bracket"></i>Sign Out</a>
                    </nav>

                </aside>
                <main>

                    @RenderBody()

                </main>
            </div>
        </section>

        <partial name="~/Views/Partials/_Footer.cshtml" />

    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/validation.js" asp-append-version="true"></script>
    <script src="~/js/uploadimageprofile.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>